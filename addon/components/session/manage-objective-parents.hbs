<section
  class="session-manage-objective-parents"
  data-test-session-manage-objective-parents
>
  {{#if @courseObjectives.length}}
    <h4 data-test-course-title>{{@courseTitle}}</h4>
    <ul class="parent-picker" data-test-parent-picker>
      {{#each (sort-by-position @courseObjectives) as |objective|}}
        <li>
          <Session::ManageObjectiveParentsItem
            @title={{objective.textTitle}}
            @isSelected={{includes objective @selected}}
            @add={{fn @add objective}}
            @remove={{fn @remove objective}}
          />
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p class="no-group" data-test-no-course-objectives-message>{{t "general.missingCourseObjectivesMessage"}}</p>
  {{/if}}
</section>
