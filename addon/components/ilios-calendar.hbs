<div class="ilios-calendar">
  <ul class="inline calendar-view-picker">
    <li>
      <button
        class="link-button highlight {{if this.showIcsFeed "on"}}"
        aria-label={{t (if this.showIcsFeed "general.hideIcsFeed" "general.showIcsFeed")}}
        type="button"
        {{on "click" (toggle "showIcsFeed" this)}}
      >
        <FaIcon @icon="rss-square" />
      </button>
    </li>
    {{#each (array "day" "week" "month") as |viewType|}}
      <li>
        {{#if (eq @selectedView viewType)}}
          {{t (concat "general." viewType)}}
        {{else}}
          <LinkTo @route="dashboard" @query={{hash view=viewType}}>{{t (concat "general." viewType)}}</LinkTo>
        {{/if}}
      </li>
    {{/each}}
  </ul>
  <ul class="inline calendar-time-picker">
    <li>
      <LinkTo @route="dashboard" @query={{hash date=this.backDate}}>
        <FaIcon @title={{t "general.back"}} @icon="backward" />
      </LinkTo>
    </li>
    <li>
      <LinkTo @route="dashboard" @query={{hash date=this.todayDate}}>
        {{t "general.today"}}
      </LinkTo>
    </li>
    <li>
      <LinkTo @route="dashboard" @query={{hash date=this.forwardDate}}>
        <FaIcon @title={{t "general.forward"}} @icon="forward" />
      </LinkTo>
    </li>
  </ul>
  <div class="ilios-calendar-calendar">
    {{#if this.showIcsFeed}}
      <IcsFeed
        @url={{@icsFeedUrl}}
        @instructions={{@icsInstructions}}
      />
    {{/if}}
    <h1 class={{unless @isLoadingEvents "loaded"}}>
      <FaIcon @icon="spinner" @spin={{true}} />
      {{t "general.loadingEvents"}}
      ...
    </h1>
    <this.calendarViewComponent
      @calendarEvents={{this.sortedEvents}}
      @date={{@selectedDate}}
      @selectEvent={{@selectEvent}}
      @changeDate={{@changeDate}}
      @changeView={{@changeView}}
      @areDaysSelectable={{true}}
      @areEventsSelectable={{true}}
    />
  </div>
</div>
