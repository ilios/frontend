<section id='instructorGroups' class='fullwidth main-border'>
  <div class="filter-tools">
    <div id='schoolsfilter' class="filter">
      <label class="inline-label">
        {{t 'general.school'}}:
      </label>
      <div id="school-selection" class="inline-data">
        {{#if hasMoreThanOneSchool}}
          {{#action-menu title=selectedSchool.title icon=false}}
            {{#each model as |school|}}
              <li {{action 'changeSelectedSchool' school}}>{{school.title}}</li>
            {{/each}}
          {{/action-menu}}
        {{else}}
          {{selectedSchool.title}}
        {{/if}}
      </div>
    </div>
    <!--  some empty filters to move title all the way to the right-->
    <div class="filter"></div>
    <div class="filter"></div>
    <div id='titlefilter' class="filter">
      {{input type='text' value=titleFilter placeholder=placeholderValue}}
    </div>
  </div>
  <section class='resultslist'>
    <div class="resultslist-header">
      <div class="resultslist-title">
        <h2>{{t 'general.instructorGroups'}}</h2>
      </div>
      <div class='resultslist-actions'>
        {{expand-collapse-button value=showNewInstructorGroupForm action="toggleNewInstructorGroupForm"}}
      </div>
    </div>
    <section class='resultslist-new'>
      {{#liquid-if showNewInstructorGroupForm class='vertical'}}
        {{new-instructorgroup
          currentSchool=selectedSchool
          save=(action 'saveNewInstructorGroup')
          cancel='toggleNewInstructorGroupForm'
        }}
      {{/liquid-if}}
      {{#each newInstructorGroups as |instructorGroup|}}
        <div class='savedinstructorgroup saved-result'>
          {{#link-to 'instructorGroup' instructorGroup}}
            {{fa-icon 'external-link-square'}} {{instructorGroup.title}}
          {{/link-to}}
          {{t 'general.savedSuccessfully'}}
        </div>
      {{/each}}
    </section>
    <div class='resultslist-list'>
      {{#if filteredInstructorGroups.isFulfilled}}
        {{instructorgroup-list
          instructorGroups=filteredInstructorGroups
          edit='editInstructorGroup'
          remove='removeInstructorGroup'
        }}
      {{else}}
        {{pulse-loader}}
      {{/if}}
    </div>
  </section>
</section>
