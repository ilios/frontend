<table>
  <thead>
    <tr>
      <th class='text-center' colspan=3>{{t 'courses.courseTitle'}}</th>
      <th class='text-center' colspan=2>{{t 'general.school'}}</th>
      <th class='text-center' colspan=2>{{t 'general.year'}}</th>
      <th class='text-center' colspan=1>{{t 'courses.level'}}</th>
      <th class='text-center' colspan=2>{{t 'courses.startDate'}}</th>
      <th class='text-center' colspan=2>{{t 'courses.endDate'}}</th>
      <th class='text-left' colspan=2>{{t 'general.status'}}</th>
      <th class='text-left' colspan=1>{{t 'general.actions'}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each proxiedCourses as |course|}}
      <tr class="{{if course.showRemoveConfirmation 'confirm-removal'}}">
        <td class='text-left' colspan=3>
          {{#link-to 'course' course.content}}
            {{course.title}}
            {{#if course.externalId}}
              ({{course.externalId}})
            {{/if}}
          {{/link-to}}
        </td>
        <td class='text-center' colspan=2 {{action 'edit' course}}>{{course.school.title}}</td>
        <td class='text-center' colspan=2 {{action 'edit' course}}>{{course.academicYear}}</td>
        <td class='text-center' colspan=1 {{action 'edit' course}}>{{course.level}}</td>
        <td class='text-center' colspan=2 {{action 'edit' course}}>{{moment-format course.startDate 'MM/DD/YY'}}</td>
        <td class='text-center' colspan=2 {{action 'edit' course}}>{{moment-format course.endDate 'MM/DD/YY'}}</td>
        <td class='text-left' colspan=2 {{action 'edit' course}}>
          {{#if course.locked}}{{fa-icon 'lock'}}{{/if}}
          {{publication-status item=course showIcon=false}}
        </td>
        <td class='text-left' colspan=1>
          {{#link-to 'course' course.content class='edit'}}
            {{fa-icon 'edit'}}
          {{/link-to}}
          {{#if course.userCanDelete}}
            <span class='clickable remove' {{action 'confirmRemove' course}}>{{fa-icon 'trash'}}</span>
          {{/if}}
        </td>
      </tr>
      {{#if course.showRemoveConfirmation}}
        <tr class='confirm-removal'><td colspan=15>
          <div class='confirm-message'>
            {{t 'courses.confirmRemove' publishedOfferingcount=course.publishedOfferingCount}} <br />
           <div class="confirm-buttons">
            <button {{action 'remove' course}} class='remove text'>{{t 'general.yes'}}</button>
            <button {{action 'cancelRemove' course}} class='done text'>{{t 'general.cancel'}}</button>
          </div>
          </div>
        </td></tr>
      {{/if}}
    {{/each}}
  </tbody>
</table>
