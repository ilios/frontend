<span class='content'>
  {{#unless isEditing}}
    <span {{action 'edit'}} class='editable {{unless value "prompt"}}'>
      {{#if value}}
        {{value}}
      {{else}}
        {{clickPrompt}}
      {{/if}}
    </span>
  {{else}}
    <span class='editor'>
      <span class='control'>
        <input type="text" value={{value}}
          onChange={{action "changeValue" value="target.value"}}
          oninput={{action "changeValue" value="target.value"}}
          class="{{if topErrorMessage 'has-error'}}">
      </span>
      <span class='actions'>
        <button class='done icon' title='{{t 'general.save'}}' {{action 'save'}}>{{fa-icon 'check'}}</button>
        <button class='cancel icon' title='{{t 'general.cancel'}}' {{action 'cancel'}}>{{fa-icon 'times'}}</button>
      </span>
      {{#if topErrorMessage}}
        <span class="validation-error-message">{{topErrorMessage}}</span>
      {{/if}}
    </span>
  {{/unless}}
</span>
