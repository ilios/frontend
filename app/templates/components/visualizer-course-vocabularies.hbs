{{#if (or true isIcon (gt (get (await data) 'length') 0))}}
  {{#simple-chart
    name='donut'
    isIcon=isIcon
    data=(await data)
    hover=(perform donutHover)
    click=(action 'donutClick')
    leave=(perform donutHover)

    as |chart|
  }}
    {{#if tooltipContent}}
      {{#chart.tooltip title=tooltipTitle}}
        {{tooltipContent}}
      {{/chart.tooltip}}
    {{/if}}
  {{/simple-chart}}
{{/if}}
