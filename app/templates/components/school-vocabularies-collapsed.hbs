<div class='title clickable'  {{action (action this.attrs.expand)}}>
  {{t 'general.vocabularies'}} ({{school.vocabularies.length}})
</div>
{{#if vocabularies.isPending}}
  <h3>{{fa-icon 'spinner' spin=true}}</h3>
{{/if}}
{{#unless vocabularies.isPending}}
  <div class='content'>
    <table class='condensed'>
      <thead>
        <tr>
          <th class='text-left'>{{t 'general.vocabulary'}}</th>
          <th class='text-left'>{{t 'general.summary'}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each sortedVocabularies as |vocabulary|}}
          <tr>
            <td>{{vocabulary.title}}</td>
            <td class='summary-highlight'>
              {{t 'general.termCount' count=vocabulary.terms.length}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/unless}}
