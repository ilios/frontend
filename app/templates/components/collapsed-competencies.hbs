<section class='detail-block collapsed'>
  <div class='detail-title clickable'  {{action (action this.attrs.expand)}}>
    {{t 'general.competencies'}} ({{subject.competencies.length}})
  </div>
  {{#if summary.isPending}}
    <h3>{{fa-icon 'spinner' spin=true}}</h3>
  {{/if}}
  {{#unless summary.isPending}}
    <div class='detail-content'>
      <table class='condensed'>
        <thead>
        <tr>
          <th class='text-left'>{{t 'general.school'}}</th>
          <th class='text-center'>{{t 'general.competencies'}}</th>
        </tr>
        </thead>
        <tbody>
        {{#each summary as |item|}}
          <tr>
            <td>{{item.school.title}}</td>
            <td class='text-center summary-highlight'>
              {{item.competencies.length}}
            </td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  {{/unless}}
</section>
