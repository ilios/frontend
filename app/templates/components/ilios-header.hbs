{{#link-to "dashboard" classNames='logo'}}
  <span class='image'></span>
  <span class='visually-hidden'>
    {{t 'general.dashboard'}}
  </span>
{{/link-to}}
<div class="tools">
  <div class='locales'>
    {{#action-menu title=(t (concat 'general.language.' i18n.locale)) icon='globe'}}
      {{#each locales as |loc|}}
        <li {{action 'changeLocale' loc.id}}>{{loc.text}}</li>
      {{/each}}
    {{/action-menu}}
  </div>
  {{#if session.isAuthenticated}}
    <div class='user'>
      {{#action-menu title=currentUser.model.fullName icon='user'}}
        {{#link-to 'myprofile'}}<li>{{t 'general.myProfile'}}</li>{{/link-to}}
        {{#link-to 'logout'}}<li>{{t 'general.logout'}}</li>{{/link-to}}
      {{/action-menu}}
    </div>
  {{/if}}
</div>
<h1>{{title}}</h1>
