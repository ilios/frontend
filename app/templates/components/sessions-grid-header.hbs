<div class='link' {{action toggleExpandAll}}>
  {{#if @showExpandAll}}
    {{#if @allSessionsExpanded}}
      {{fa-icon 'caret-down'}}
    {{else}}
      {{fa-icon 'caret-right'}}
    {{/if}}
  {{/if}}
</div>
{{#sortable-heading
  click=(action 'setSortBy' 'title')
  sortedBy=(or (eq sortBy 'title') (eq sortBy 'title:desc'))
  sortedAscending=sortedAscending
}}
