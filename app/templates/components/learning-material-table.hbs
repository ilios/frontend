{{! template-lint-disable attribute-indentation }}
{{#light-table
  table
  responsive=true
  tableActions=(hash manageMaterial=manageMaterial)
  extra=(hash editable=editable)
  as |t|
}}
  {{t.head}}

  {{#t.body
    canExpand=false
    canSelect=false
    rowComponent=(component "removable-row")
    as |body|
  }}
    {{#body.expanded-row as |row|}}
      {{#if row.confirmDelete}}
        <div class="confirm-removal">
          <p>
            {{t "general.confirmRemoval"}}
            <div class="confirm-buttons">
              <button {{action (perform removeLearningMaterial row.content)}}
                class="remove {{if removeLearningMaterial.isIdle "clickable"}}"
              >
                {{#if removeLearningMaterial.isRunning}}
                  {{loading-spinner}}
                {{else}}
                  {{t "general.yes"}}
                {{/if}}
              </button>
              <button {{action "cancelRemove" row}} class="done text">{{t "general.cancel"}}</button>
            </div>
          </p>
        </div>
      {{/if}}
    {{/body.expanded-row}}
  {{/t.body}}

{{/light-table}}
