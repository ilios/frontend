{{#expander-box
  title=session.title
  forceOpen=session.isNew
  isSaveable=session.isDirty
  isRemoveable=true
  save='save'
  remove='remove'
}}
<section {{bind-attr class=":session session.isDirty"}}>
  <div class='title'>
    <label {{bind-attr for="view.titleField.elementId"}}>{{t "general.title"}}
      {{input type='textarea' value=session.title}}
    </label>
  </div>
</section>
{{/expander-box}}
