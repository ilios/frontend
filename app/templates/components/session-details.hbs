<div class='detail-view'>
  <div class='detail-view-details'>
    {{session-overview
      course=course
      session=session
      sessionTypes=sessionTypes
    }}
    {{#liquid-if session.isIndependentLearning class='vertical'}}
      {{detail-learnergroups
        subject=session.ilmSessionFacet
        cohorts=session.course.cohorts
        isIlmSession=true
      }}
      {{detail-instructorgroups
        subject=session.ilmSessionFacet
        isIlmSession=true
      }}
    {{/liquid-if}}
    {{detail-objectives subject=session isSession=true}}
    {{detail-learning-materials subject=session isCourse=false}}
    {{detail-topics
      subject=session
      availableTopics=availableTopics
    }}
    {{detail-mesh
      subject=session
      isSession=true
    }}
    {{session-offerings session=session}}
  </div>
</div>
