<section class='detail-overview detail-block'>
  <div class='detail-title'>
    {{t 'general.overview'}}
  </div>
  <div class='detail-actions'>
    {{#link-to 'printCourse' course (query-params unpublished=true)}}
      <button>{{t 'general.printSummary'}}</button>
    {{/link-to}}
  </div>
  <div class='detail-content form-container'>
      <div class="form-col-6 multi-row">
        <label class="form-label">{{t "courses.externalId"}}:</label>
        <div class="form-data courseexternalid">
          {{#if editable}}
            {{#editable-field
              value=externalId
              save=(action 'changeExternalId')
              close=(action 'revertExternalIdChanges')
              as |isSaving save close|
            }}
              {{one-way-input
                value=externalId
                update=(action (mut externalId))
                onenter=save
                onescape=close
                disabled=isSaving
                focusOut=(action 'addErrorDisplayFor' 'externalId')
              }}
              {{#if (and (v-get this 'externalId' 'isInvalid') (is-in showErrorsFor 'externalId'))}}
                <span class="validation-error-message">{{v-get this 'externalId' 'message'}}</span>
              {{/if}}
            {{/editable-field}}
          {{else}}
            {{externalId}}&nbsp;
          {{/if}}
        </div>
        <label class="form-label">{{t "courses.clerkshipType"}}:</label>
        <div class="form-data clerkshiptype">
          {{#if editable}}
            {{inplace-select
              value=course.clerkshipType.id
              options=clerkshipTypeOptions
              save='changeClerkshipType'
              selectPromptTranslation='courses.notAClerkship'
              clickPromptTranslation='courses.notAClerkship'
            }}
          {{else}}
            {{#if course.clerkshipType}}
              {{course.clerkshipType.title}}
            {{else}}
              {{t 'courses.notAClerkship'}}
            {{/if}}
          {{/if}}
        </div>
        <label class="form-label">{{t "courses.level"}}:</label>
        <div class="form-data courselevel">
          {{#if editable}}
            {{inplace-select value=course.level options=levelOptions save='changeLevel'}}
          {{else}}
            {{course.level}}&nbsp;
          {{/if}}
        </div>
      </div>

      <div class="form-col-6 multi-row">
        <label class='form-label'>{{t "general.start"}}:</label>
        <div class="form-data coursestartdate">
          {{#if editable}}
            {{inplace-date value=course.startDate save='changeStartDate'}}
          {{else}}
            {{moment-format course.startDate 'MM/DD/YY'}}&nbsp;
          {{/if}}
        </div>
        <label class="form-label">{{t "general.end"}}:</label>
        <div class="form-data courseenddate">
          {{#if editable}}
            {{inplace-date value=course.endDate save='changeEndDate'}}
          {{else}}
            {{moment-format course.endDate 'MM/DD/YY'}}&nbsp;
          {{/if}}
        </div>
      </div>
      <div class="form-col-12 coursedirectors">
        <label>{{t "general.directors"}}:</label>
        {{#if editable}}
          <span>
            <ul class='removable-list tag-list'>
              {{#each sortedDirectors as |user|}}
              <li {{action 'removeDirector' user}}>{{user.fullName}}{{fa-icon 'remove' classNames='removex'}}</li>
              {{/each}}
            </ul>
          </span>
          {{user-search
            addUser='addDirector'
            roles='1'
            currentlyActiveUsers=course.directors
          }}
        {{else}}
          <ul class='inline-list'>
            {{#each sortedDirectors as |user|}}
              <li>{{user.fullName}}</li>
            {{/each}}
          </ul>
        {{/if}}
      </div>
  </div>
</section>
