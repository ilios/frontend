<section class="detail-block">
  <div class='title'>
    {{t 'general.overview'}}
  </div>
  <div class='print'>
    {{#link-to 'printCourse' course (query-params unpublished=true)}}
      <button>{{t 'general.printSummary'}}</button>
    {{/link-to}}
  </div>
  <div class='course-overview-content'>
    <div class="block courseexternalid">
      <label>{{t "courses.externalId"}}:</label>
      <span>
        {{#if editable}}
          {{#editable-field
            value=(if externalId externalId (t 'general.clickToEdit'))
            save=(action 'changeExternalId')
            close=(action 'revertExternalIdChanges')
            as |isSaving save close|
          }}
            {{one-way-input
              value=externalId
              update=(action (mut externalId))
              onenter=save
              onescape=close
              disabled=isSaving
              focusOut=(action 'addErrorDisplayFor' 'externalId')
            }}
            {{#if (and (v-get this 'externalId' 'isInvalid') (is-in showErrorsFor 'externalId'))}}
              <span class="validation-error-message">{{v-get this 'externalId' 'message'}}</span>
            {{/if}}
          {{/editable-field}}
        {{else}}
          {{externalId}}&nbsp;
        {{/if}}
      </span>
    </div>
    <div class="block clerkshiptype">
      <label>{{t "courses.clerkshipType"}}:</label>
      <span>
        {{#if editable}}
          {{#editable-field
            value=(if course.clerkshipType course.clerkshipType.title (t 'courses.notAClerkship'))
            save=(action 'changeClerkshipType')
            close=(action 'revertClerkshipTypeChanges')
            as |isSaving save close|
          }}
            <select onchange={{action "setCourseClerkshipType" value="target.value"}}>
              <option value=null selected={{is-empty selectedClerkshipType}}>{{t 'courses.notAClerkship'}}</option>
              {{#each clerkshipTypeOptions as |clerkshipType|}}
                <option value={{clerkshipType.id}} selected={{is-equal clerkshipType selectedClerkshipType}}>
                  {{clerkshipType.title}}
                </option>
              {{/each}}
            </select>
          {{/editable-field}}
        {{else}}
          {{#if course.clerkshipType}}
            {{course.clerkshipType.title}}
          {{else}}
            {{t 'courses.notAClerkship'}}
          {{/if}}
        {{/if}}
      </span>
    </div>
    <div class="block coursestartdate">
      <label>{{t "general.start"}}:</label>
      <span>
        {{#if editable}}
          {{inplace-date value=course.startDate save='changeStartDate'}}
        {{else}}
          {{moment-format course.startDate 'MM/DD/YY'}}&nbsp;
        {{/if}}
      </span>
    </div>
    <div class="block courseenddate">
      <label>{{t "general.end"}}:</label>
      <span>
        {{#if editable}}
          {{inplace-date value=course.endDate save='changeEndDate'}}
        {{else}}
          {{moment-format course.endDate 'MM/DD/YY'}}&nbsp;
        {{/if}}
      </span>
    </div>
    <div class="block courselevel">
      <label>{{t "courses.level"}}:</label>
      <span>
        {{#if editable}}
          {{inplace-select value=course.level options=levelOptions save='changeLevel'}}
        {{else}}
          {{course.level}}&nbsp;
        {{/if}}
      </span>
    </div>
    <div class="block">
      <label>{{t 'general.universalLocator'}}:</label>
      <span class="universallocator"><strong>ILIOS{{course.id}}</strong></span>
    </div>
    <div class="coursedirectors">
      <label>{{t 'general.directors'}}:</label>
      {{#unless showDirectorManagerLoader}}
        {{#if manageDirectors}}
          {{course-director-manager
            directors=directorsToPassToManager.lastSuccessful.value
            save=(action 'saveDirectors')
            close=(toggle-action 'manageDirectors' this)
          }}
        {{else}}
          <span class={{if editable 'clickable link'}} onclick={{if editable (action (toggle 'manageDirectors' this))}}>
            {{#if (get (await course.directors) 'length')}}
              {{join '; ' (map-by 'fullName' (sort-by 'lastName' (await course.directors)))}}
            {{else}}
              {{t 'general.none'}}
            {{/if}}
          </span>
        {{/if}}
      {{else}}
        <span>{{fa-icon 'spinner' spin=true}}</span>
      {{/unless}}
    </div>
  </div>
</section>
