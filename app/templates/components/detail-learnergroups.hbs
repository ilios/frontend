<section class='detail-block'>
  <div class='detail-title'>
    {{t 'courses.learnerGroups'}} ({{subject.learnerGroups.length}})
    {{#if isManaging}}
      <span class='detail-specific-title'>
        {{t 'courses.learnerGroupsManageTitle'}}
      </span>
    {{/if}}
  </div>

  <div class='detail-actions'>
    {{#if isManaging}}
        <button class='bigadd' {{action 'save'}}>{{fa-icon 'check'}}</button>
        <button class='bigcancel' {{action 'cancel'}}>{{fa-icon 'undo'}}</button>
    {{else if editable}}
      <button {{action 'manage'}}>{{t 'courses.learnerGroupsManageTitle'}}</button>
    {{/if}}
  </div>
  <div class='detail-content'>
    {{#liquid-if isManaging class="horizontal"}}
        {{learnergroup-selection-manager
          subject=subject
          cohorts=cohorts
        }}
    {{else}}
      {{detail-learnergroups-list
        learnerGroups=subject.learnerGroups
      }}
    {{/liquid-if}}
  </div>
</section>
