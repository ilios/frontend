<h3 class="title">{{t "general.icsFeed"}}</h3>
<div class="actions">
  {{#if isManaging}}
    <button
      disabled={{refreshKey.isRunning}}
      title={{t "general.refreshIcsFeedKey"}}
      class="refresh-key"
      {{action (perform refreshKey)}}
    >
      {{fa-icon
        (if refreshKey.isRunning "spinner" "sync")
        spin=(if refreshKey.isRunning true false)
      }}
    </button>
    <button
      disabled={{refreshKey.isRunning}}
      class="bigcancel"
      {{action setIsManaging false}}
    >
      {{fa-icon "undo"}}
    </button>
  {{else if isManageable}}
    <button
      class="manage"
      title={{t "general.refreshIcsFeedKey"}}
      {{action setIsManaging true}}
    >
      {{fa-icon "edit"}}
    </button>
  {{/if}}
</div>

<p>
  {{#if icsFeedKey.length}}
    <p class="ics-instructions">{{t "general.icsAdminInstructions"}}</p>
    <p>
      {{#copy-button clipboardText=icsFeedUrl success=(perform textCopied)}}
        {{fa-icon "copy"}} {{t "general.link"}}
      {{/copy-button}}
      {{#if showCopySuccessMessage}}
        <span class="yes">{{t "general.copiedSuccessfully"}}</span>
      {{/if}}
    </p>
  {{else}}
    {{t "general.none"}}
  {{/if}}
</p>
