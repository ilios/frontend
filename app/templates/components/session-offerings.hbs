<section class='detail-block'>
  <div class='detail-title'>
    {{t 'general.offerings'}} ({{offerings.length}})
  </div>
  <div class='calendar-toggle'>
    <label class='switch switch-blue switch-wide calendar'>
      <input class='switch-input' type='checkbox' checked="checked"/>
      <span class="switch-label" data-on='{{t 'offerings.calendarOn'}}' data-off='{{t 'offerings.calendarOff'}}'></span>
      <span class="switch-handle"></span>
    </label>
  </div>

  <div class='detail-actions'>
    {{#action-menu title=newButtonTitle icon='plus' classNames='blend-button right-edge'}}
      <li {{action 'add'}}>{{t 'general.addNew'}}</li>
      <li>{{t 'sessions.openSmallGroupGenerator'}}</li>
    {{/action-menu}}
  </div>
  <div class='detail-content'>
    {{#each offering in newOfferings}}
      {{offering-manager
        offering=offering
        isEditing=true
        save='removeNewOffering'
        cancel='removeNewOffering'
      }}
    {{/each}}
    {{#if offerings.length}}
      {{#each block in offeringBlocks}}
        {{offering-block block=block}}
      {{/each}}
    {{else}}
      <p>{{t 'sessions.noOfferings'}}</p>
    {{/if}}
  </div>
</section>
