<section class='halfwidth'>
  <ul class='tree-list removable'>
    {{#each stewardSchools as |schoolProxy|}}
      <li>
        <span class='removable' {{action 'removeSchool' schoolProxy.content}}>
          {{fa-icon 'times'}} {{schoolProxy.title}}
        </span>
        <ul>
          {{#each schoolProxy.departments as |department|}}
            <li class='removable' {{action 'removeDepartment' schoolProxy.content department}}>
              {{fa-icon 'times'}} {{department.title}}
            </li>
          {{/each}}
        </ul>
      </li>
    {{/each}}
  </ul>
</section>


<section class='halfwidth'>
  <ul class='tree-list selectable'>
    {{#each availableSchools as |schoolProxy|}}
      <li {{action 'addSchool' schoolProxy}}>
        {{schoolProxy.title}}
        <ul>
          {{#each schoolProxy.departments as |department|}}
            <li {{action 'addDepartment' schoolProxy department}}>{{department.title}}</li>
          {{/each}}
        </ul>
      </li>
    {{/each}}
  </ul>
</section>
