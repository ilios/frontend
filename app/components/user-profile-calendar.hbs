<div
  class="user-profile-calendar"
    {{did-insert (perform this.load) @user}}
    {{did-update (perform this.load) @user}}
>
  <h2 class="title">
    {{t "general.calendar"}}
  </h2>
  <ul class="calendar-time-picker">
    <li class="clickable" {{on "click" this.goBack}}>
      <FaIcon @icon="backward" />
    </li>
    <li class="clickable" {{on "click" this.gotoToday}}>
      {{t "general.today"}}
    </li>
    <li class="clickable" {{on "click" this.goForward}}>
      <FaIcon @icon="forward" />
    </li>
  </ul>
  <div class="ilios-calendar">
    <IliosCalendarWeek
      @calendarEvents={{this.calendarEvents}}
      @date={{date}}
      @areEventsSelectable={{false}}
      @areDaysSelectable={{false}}
    />
  </div>
  <span class="loding-indicator {{if (is-array this.calendarEvents) "loaded"}}">
    <LoadingSpinner />
    {{t "general.loadingEvents"}}
    ...
  </span>
</div>
