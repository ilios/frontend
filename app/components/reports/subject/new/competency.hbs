<p data-test-reports-subject-new-competency>
  <label for="new-competency">
    {{t "general.whichIs"}}
  </label>
  {{#if this.isLoaded}}
    <select
      id="new-competency"
      data-test-prepositional-objects
      {{on "change" (pick "target.value" @changeId)}}
      {{did-insert (perform this.setInitialValue)}}
      {{did-update (perform this.setInitialValue) @school}}
    >
      {{#each this.sortedCompetencies as |competency|}}
        <option
          selected={{eq competency.id @currentId}}
          value={{competency.id}}
        >
          {{competency.title}}
        </option>
      {{/each}}
    </select>
  {{else}}
    <LoadingSpinner />
  {{/if}}
</p>
