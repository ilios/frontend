<div
  class="bulk-new-users"
  ...attributes
  {{did-insert (perform this.load)}}
>
  {{#unless this.load.isRunning}}
    {{#if this.savingUserErrors.length}}
      <div class="saving-user-errors">
        <p>
          {{t "general.errorSavingUser"}}
        </p>
        <ul>
          {{#each
            (sort-by "lastName" (map-by "userInput" this.savingUserErrors)) as |obj|
          }}
            <li>
              {{obj.lastName}},
              {{obj.firstName}}
              ({{obj.email}})
            </li>
          {{/each}}
        </ul>
      </div>
    {{/if}}
    {{#if this.savingAuthenticationErrors.length}}
      <div class="saving-authentication-errors">
        <p>
          {{t "general.errorSavingAuthentication"}}
        </p>
        <ul>
          {{#each
            (sort-by
              "lastName" (map-by "user" this.savingAuthenticationErrors)
            ) as |user|
          }}
            <li>
              <LinkTo @route="user" @model={{user}}>
                {{user.lastName}},
                {{user.firstName}}
                ({{user.email}})
              </LinkTo>
            </li>
          {{/each}}
        </ul>
      </div>
    {{/if}}
    <h3>
      {{t "general.newUser"}}
    </h3>
    <div class="new-user-form">
      <div class="choose-form-type">
        <label>
          {{t "general.createNew"}}:
        </label>
        <ClickChoiceButtons
          @buttonContent1={{t "general.nonStudent"}}
          @buttonContent2={{t "general.student"}}
          @firstChoicePicked={{this.nonStudentMode}}
          @toggle={{set this.nonStudentMode (not this.nonStudentMode)}}
        />
      </div>
      <div class="upload-users">
        <label>
          {{t "general.uploadUsers"}}
          (<a
             target="_blank"
             rel="noopener noreferrer"
             download="SampleUserUpload.tsv"
             href="data:application/octet-stream;charset=utf-8;base64,{{this.sampleData}}"
           >
             {{t "general.sampleFile"}}
           </a>):
        </label>
        <input
          type="file"
          {{on "change" (pick "target.files" (perform this.updateSelectedFile))}}
          disabled={{this.updateSelectedFile.isRunning}}
        >
      </div>
      {{#if this.updateSelectedFile.isRunning}}
        <div class="file-is-loading">
          <LoadingSpinner />
        </div>
      {{else if (gte this.proposedUsers.length 1)}}
        <div class="proposed-new-users" data-test-proposed-new-users>
          <table>
            <thead>
              <tr>
                <th></th>
                <th>
                  {{t "general.firstName"}}
                </th>
                <th>
                  {{t "general.lastName"}}
                </th>
                <th>
                  {{t "general.middleName"}}
                </th>
                <th>
                  {{t "general.phone"}}
                </th>
                <th>
                  {{t "general.email"}}
                </th>
                <th>
                  {{t "general.campusId"}}
                </th>
                <th>
                  {{t "general.otherId"}}
                </th>
                <th>
                  {{t "general.username"}}
                </th>
                <th>
                  {{t "general.password"}}
                </th>
              </tr>
            </thead>
            <tbody>
              {{#each this.proposedUsers as |obj|}}
                <tr>
                  <td>
                    <input
                      type="checkbox"
                      checked={{and
                        (await (compute obj.isValid))
                        (includes obj this.selectedUsers)
                      }}
                      {{on "click" (fn this.toggleUserSelection obj)}}
                      disabled={{await (compute obj.isInvalid)}}
                    >
                  </td>
                  <td class={{if (await (compute obj.hasErrorFor "firstName")) "error"}}>
                    {{obj.firstName}}
                  </td>
                  <td class={{if (await (compute obj.hasErrorFor "lastName")) "error"}}>
                    {{obj.lastName}}
                  </td>
                  <td class={{if (await (compute obj.hasErrorFor "middleName")) "error"}}>
                    {{obj.middleName}}
                  </td>
                  <td>
                    {{obj.phone}}
                  </td>
                  <td class={{if (await (compute obj.hasErrorFor "email")) "error"}}>
                    {{obj.email}}
                  </td>
                  <td class={{if (await (compute obj.hasErrorFor "campusId")) "error"}}>
                    {{obj.campusId}}
                  </td>
                  <td class={{if (await (compute obj.hasErrorFor "otherId")) "error"}}>
                    {{obj.otherId}}
                  </td>
                  <td class={{if (await (compute obj.hasErrorFor "username")) "error"}}>
                    {{obj.username}}
                  </td>
                  <td>
                    {{obj.password}}
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      {{/if}}
      <div class="item last">
        <label>
          {{t "general.primarySchool"}}:
        </label>
        <select
          {{on "change" (pick "target.value" (perform this.setSchool))}}
          data-test-schools
        >
          {{#each (sort-by "title" this.schools) as |school|}}
            <option
              value={{school.id}}
              selected={{eq school.id this.bestSelectedSchool.id}}
            >
              {{school.title}}
            </option>
          {{/each}}
        </select>
      </div>
      {{#unless this.nonStudentMode}}
        <div class="item last">
          <label>
            {{t "general.primaryCohort"}}:
          </label>
          {{#if this.loadCohorts.isIdle}}
            <select
              {{on "change" (pick "target.value" this.setPrimaryCohort)}}
              data-test-cohorts
            >
              {{#each (sort-by "title" this.cohorts) as |cohort|}}
                <option
                  value={{cohort.id}}
                  selected={{eq cohort.id this.bestSelectedCohort.id}}
                >
                  {{cohort.title}}
                </option>
              {{/each}}
            </select>
          {{else}}
            <LoadingSpinner />
          {{/if}}
        </div>
      {{/unless}}
      <div class="buttons">
        <button
          type="button"
          class="done text"
          disabled={{or
            (lt this.selectedUsers.length 1)
            this.save.isRunning
            this.load.isRunning
          }}
          {{on "click" (perform this.save)}}
        >
          {{#if this.save.isRunning}}
            <LoadingSpinner />
          {{else}}
            {{t "general.done"}}
          {{/if}}
        </button>
        <button type="button" class="cancel text" {{on "click" @close}}>
          {{t "general.cancel"}}
        </button>
      </div>
    </div>
    {{#if this.save.isRunning}}
      <WaitSaving
        @showProgress={{true}}
        @totalProgress={{this.selectedUsers.length}}
        @currentProgress={{this.savedUserIds.length}}
      />
    {{/if}}
  {{/unless}}
</div>
