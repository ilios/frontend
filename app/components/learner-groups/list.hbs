<table
  class="learner-groups-list"
  data-test-learner-groups-list
  ...attributes
>
  <thead>
    <tr>
      <SortableTh
        @colspan={{2}}
        @sortedAscending={{this.sortedAscending}}
        @onClick={{fn this.setSortBy "title"}}
        @sortedBy={{or
          (eq @sortBy "title")
          (eq @sortBy "title:desc")
        }}
      >
        {{t "general.learnerGroupTitle"}}
      </SortableTh>
      <SortableTh
        @align="center"
        @colspan={{1}}
        @hideFromSmallScreen={{true}}
        @sortedAscending={{this.sortedAscending}}
        @sortType="numeric"
        @onClick={{fn this.setSortBy "usersCount"}}
        @sortedBy={{or
          (eq @sortBy "usersCount")
          (eq @sortBy "usersCount:desc")
        }}
      >
        {{t "general.members"}}
      </SortableTh>
      <SortableTh
        @align="center"
        @colspan={{1}}
        @hideFromSmallScreen={{true}}
        @sortedAscending={{this.sortedAscending}}
        @sortType="numeric"
        @onClick={{fn this.setSortBy "childrenCount"}}
        @sortedBy={{or
          (eq @sortBy "childrenCount")
          (eq @sortBy "childrenCount:desc")
        }}
      >
        {{t "general.subgroups"}}
      </SortableTh>
      <th class="text-right">
        {{t "general.actions"}}
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each (
      sort-by (if (or (eq @sortBy "title") (eq @sortBy "title:desc")) this.sortByTitle @sortBy
      ) @learnerGroups) as |learnerGroup|
    }}
      <LearnerGroups::ListItem
        @learnerGroup={{learnerGroup}}
        @canCopyWithLearners={{@canCopyWithLearners}}
        @copyGroup={{@copyGroup}}
      />
    {{else}}
      <tr data-test-empty-list>
        <td class="text-center" colspan={{if (media "isLaptopAndUp") "5" "3"}}>
          {{if @query (t "general.noResultsFound") (t "general.none")}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
