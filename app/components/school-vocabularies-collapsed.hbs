<section class="school-vocabularies-collapsed" ...attributes>
  <div class="title clickable" role="button" {{action (action expand)}}>
    {{t "general.vocabularies"}}
    ({{get (await school.vocabularies) "length"}})
  </div>
  {{#if (is-pending school.vocabularies)}}
    <LoadingSpinner @tagName="h3" />
  {{/if}}
  {{#if (is-fulfilled school.vocabularies)}}
    <div class="content">
      <table class="condensed">
        <thead>
          <tr>
            <th class="text-left">
              {{t "general.vocabulary"}}
            </th>
            <th class="text-left">
              {{t "general.summary"}}
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each (sort-by "title" (await school.vocabularies)) as |vocabulary|}}
            <tr>
              <td>
                {{vocabulary.title}}
              </td>
              <td class="summary-highlight">
                {{t "general.termCount" count=vocabulary.termCount}}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{/if}}
</section>
