{{page-title (t "general.error")}}
<div class="full-screen-error">
  {{#if this.isA404}}
    <NotFound />
  {{else}}
    <h2>
      {{t "general.finalErrorDisplayMessage"}}
    </h2>
    <p class="clear-errors">
      <button type="button" {{on "click" this.forceRefresh}}>
        {{t "general.refreshTheBrowser"}}
      </button>
    </p>
  {{/if}}
</div>