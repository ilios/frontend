<div
  class="{{unless @isIcon 'not-icon'}} school-visualizer-session-type-vocabulary-graph"
  data-test-school-visualizer-session-type-vocabulary-graph
  ...attributes
>
  {{#if this.isLoaded}}
    {{#if (or @isIcon (gt this.data.length 0))}}
      <SimpleChart
        @name="donut"
        @isIcon={{@isIcon}}
        @data={{this.data}}
        @hover={{perform this.donutHover}}
        @leave={{perform this.donutHover}}
        as |chart|
      >
        {{#if this.tooltipContent}}
          <chart.tooltip @title={{this.tooltipTitle}}>
            {{this.tooltipContent}}
          </chart.tooltip>
        {{/if}}
      </SimpleChart>
    {{else}}
      <div class="with-hours" data-test-no-data>
        <h4>
          <FaIcon @icon="face-meh" class="meh-o" />
        </h4>
      </div>
    {{/if}}
  {{else}}
    <FaIcon @icon="spinner" @spin={{true}} />
  {{/if}}
</div>