<div class="list" ...attributes data-test-program-list>
  <table>
    <thead>
      <tr>
        <th class="text-left" colspan="3">
          {{t "general.programTitle"}}
        </th>
        <th class="text-center hide-from-small-screen" colspan="2">
          {{t "general.school"}}
        </th>
        <th class="text-right" colspan="2">
          {{t "general.actions"}}
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each @programs as |program|}}
        <Programs::ListItem @program={{program}} />
      {{else}}
        <tr data-test-empty-list>
          <td class="text-center" colspan={{if (media "isLaptopAndUp") "7" "5"}}>
            {{if @query (t "general.noResultsFound") (t "general.none")}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>