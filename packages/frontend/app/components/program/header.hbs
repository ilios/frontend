{{#let (unique-id) as |id|}}
  <div
    class="program-header"
    data-test-program-header
    ...attributes
  >
    <h2 class="title" data-test-title>
      {{#if @canUpdate}}
        <EditableField
          @value={{this.title}}
          @save={{perform this.changeTitle}}
          @close={{set this "title" @program.title}}
          @saveOnEnter={{true}}
          @clickPrompt={{t "general.clickToEdit"}}
          @closeOnEscape={{true}} as |isSaving|
        >
          <input
            id="{{id}}-title"
            type="text"
            value={{this.title}}
            {{on "input" (pick "target.value" (set this "title"))}}
            {{on "keypress" (fn this.addErrorDisplayFor "title")}}
            disabled={{isSaving}}
          >
        </EditableField>
        <ValidationError @errors={{get-errors-for this.title}} />
      {{else}}
        <h2>{{@program.title}}</h2>
      {{/if}}
    </h2>
  </div>
{{/let}}
