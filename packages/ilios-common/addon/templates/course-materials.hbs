<div class="backtolink">
  <LinkTo @route="course" @model={{@model}}>
    {{t "general.backToCourse"}}
  </LinkTo>
</div>
<Course::SummaryHeader @course={{@model}} />
<Course::Materials
  @course={{@model}}
  @courseSort={{or this.courseSort "title"}}
  @sessionSort={{or this.sessionSort "title"}}
  @onCourseSort={{set this "courseSort"}}
  @onSessionSort={{set this "sessionSort"}}
/>